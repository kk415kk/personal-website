<div class="header-auto">
	<div class="row">
		<h2>Manage Projects</h2>
	</div>
</div>
<div class="banner">
	<div class="row">
		<% if (messages && messages['error']) { %>
		  <div class="error">
		  <% messages['error'].forEach(function(message) { %>
		    <%= message %>
		    <br>
		  <% }); %>
		  </div>
		  <br>
		<% } %>
		<div class="box">
			<form action="/project/save/<%= project.id %>" method="POST" class="form-signin">
			  <h2 class="form-signin-heading">Edit Project</h2>
			  <label>Name: </label><input type="text" class="form-control" value="<%= project.name %>" name="name">
			  <label>Technology: </label><input type="text" class="form-control" value="<%= project.technology %>" name="technology">
			  <label>Start Date: </label><input type="text" class="form-control" value="<%= project.start_date %>" name="start_date">
			  <label>End Date: </label><input type="text" class="form-control" value="<%= project.end_date %>" name="end_date">
			  <label>Description: </label><textarea class="form-control" value="<%= project.description %>" name="description"></textarea>
			  <br>
			  <input type="submit" class="button" value="Save"/>
			  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
		</div>
	</div>
</div>

<div class="row">
	<div class="large-12 columns">
	</div>
</div>